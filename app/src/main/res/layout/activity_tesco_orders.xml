<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TescoOrdersActivity">


    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Tesco Orders"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#590377AC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dateNametextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:text="Date:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sixPk30TextView"
        app:layout_constraintEnd_toStartOf="@+id/add_tesco_date" />


    <EditText
        android:id="@+id/add_tesco_date"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:autoText="false"
        android:ems="10"
        android:hint="01/01/2020"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/add_six_pk_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sixPk30TextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:text="Six Pack X30:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sixPk10TextView"
        app:layout_constraintEnd_toStartOf="@+id/add_six_pk_30" />

    <EditText
        android:id="@+id/add_six_pk_30"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/add_six_pk_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/sixPk10TextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:text="Six Pack X10:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sunstreamEditText"
        app:layout_constraintEnd_toStartOf="@+id/add_six_pk_10" />

    <EditText
        android:id="@+id/add_six_pk_10"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/add_sunstream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/sunstreamEditText"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:text="Sunstream X16:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/everydayEditText"
        app:layout_constraintEnd_toStartOf="@+id/add_sunstream" />

    <EditText
        android:id="@+id/add_sunstream"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/add_everyday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/everydayEditText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="68dp"
        android:gravity="right"
        android:text="Everyday X8:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit_tesco"
        app:layout_constraintEnd_toStartOf="@+id/add_everyday"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/add_everyday"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit_tesco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_submit_tesco"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852" />

</androidx.constraintlayout.widget.ConstraintLayout>
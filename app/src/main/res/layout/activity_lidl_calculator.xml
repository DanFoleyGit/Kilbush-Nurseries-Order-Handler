<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LidlCalculatorActivity">

    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Lidl Calculater"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#C3FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_LidlCalculatorCalculate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <View
        android:id="@+id/sunstreamLidl_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <TextView
        android:id="@+id/sunstreamLidl_name"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:autoSizeTextType="none"
        android:text="Sunstream"
        app:layout_constraintStart_toStartOf="@+id/sunstreamLidl_view"
        app:layout_constraintTop_toTopOf="@+id/sunstreamLidl_view" />

    <EditText
        android:id="@+id/sunstreamLidl_quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sunstreamLidl_name"
        app:layout_constraintTop_toTopOf="@+id/sunstreamLidl_view" />

    <TextView
        android:id="@+id/sunstreamLidl_bulk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="bulk"
        app:layout_constraintStart_toEndOf="@+id/sunstreamLidl_quantity"
        app:layout_constraintTop_toTopOf="@+id/sunstreamLidl_view" />

    <TextView
        android:id="@+id/sunstreamLidl_remainder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="rem"
        app:layout_constraintStart_toEndOf="@+id/sunstreamLidl_bulk"
        app:layout_constraintTop_toTopOf="@+id/sunstreamLidl_view" />

    <View
        android:id="@+id/largeVineLidl_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591" />

    <TextView
        android:id="@+id/largeVineLidl_name"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:autoSizeTextType="none"
        android:text="Large Vinex18"
        app:layout_constraintStart_toStartOf="@+id/largeVineLidl_view"
        app:layout_constraintTop_toTopOf="@+id/largeVineLidl_view"
        />

    <EditText
        android:id="@+id/largeVineLidl_quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/largeVineLidl_name"
        app:layout_constraintTop_toTopOf="@+id/largeVineLidl_view" />

    <TextView
        android:id="@+id/largeVineLidl_bulk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="bulk"
        app:layout_constraintStart_toEndOf="@+id/largeVineLidl_quantity"
        app:layout_constraintTop_toTopOf="@+id/largeVineLidl_view" />

    <TextView
        android:id="@+id/largeVineLidl_remainder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="rem"
        app:layout_constraintStart_toEndOf="@+id/largeVineLidl_bulk"
        app:layout_constraintTop_toTopOf="@+id/largeVineLidl_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LidlOrdersActivity">

    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Input Lidl Orders"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#C3FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dateNametextViewLidl"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:text="Date:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sunstreamLidlEditText"
        app:layout_constraintEnd_toStartOf="@+id/add_Lidl_date" />

    <EditText
        android:id="@+id/add_Lidl_date"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="01/01/2020"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/add_sunstreamLidl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sunstreamLidlEditText"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:text="Sunstream X10:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/everydayEditText"
        app:layout_constraintEnd_toStartOf="@+id/add_sunstreamLidl" />

    <EditText
        android:id="@+id/add_sunstreamLidl"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        android:ems="30"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/add_largevineLidl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/everydayEditText"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="68dp"
        android:gravity="right"
        android:text="Large Vine X8:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit_lidl"
        app:layout_constraintEnd_toStartOf="@+id/add_largevineLidl" />

    <EditText
        android:id="@+id/add_largevineLidl"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:ems="30"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit_lidl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_submit_lidl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852" />
</androidx.constraintlayout.widget.ConstraintLayout>
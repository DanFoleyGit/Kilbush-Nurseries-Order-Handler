<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TescoCalculatorActivity">

    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Tesco Calculater"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#590377AC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btn_tescoCalculatorCalculate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />


    <View
        android:id="@+id/sixPk_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/sixPk10_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sixPk_name"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:autoSizeTextType="none"
        android:text="6 pack x30"
        app:layout_constraintBottom_toBottomOf="@+id/sixPk_view"
        app:layout_constraintEnd_toEndOf="@+id/sixPk_view"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/sixPk_view"
        app:layout_constraintTop_toTopOf="@+id/sixPk_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sixPk_bulk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="bulk"
        app:layout_constraintStart_toEndOf="@+id/sixPk_quantity"
        app:layout_constraintTop_toTopOf="@+id/sixPk_view" />


    <EditText
        android:id="@+id/sixPk_quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sixPk_name"
        app:layout_constraintTop_toTopOf="@+id/sixPk_view" />

    <TextView
        android:id="@+id/sixPk_remainder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="rem"
        app:layout_constraintStart_toEndOf="@+id/sixPk_bulk"
        app:layout_constraintTop_toTopOf="@+id/sixPk_view" />


    <View
        android:id="@+id/sixPk10_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/sunstream_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sixPk10_name"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:autoSizeTextType="none"
        android:text="6 pack x 10"
        app:layout_constraintBottom_toBottomOf="@+id/sixPk10_view"
        app:layout_constraintEnd_toEndOf="@+id/sixPk10_view"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/sixPk10_view"
        app:layout_constraintTop_toTopOf="@+id/sixPk10_view"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/sixPk10_quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sixPk10_name"
        app:layout_constraintTop_toTopOf="@+id/sixPk10_view" />

    <TextView
        android:id="@+id/sixPk10_bulk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="bulk"
        app:layout_constraintStart_toEndOf="@+id/sixPk10_quantity"
        app:layout_constraintTop_toTopOf="@+id/sixPk10_view" />

    <TextView
        android:id="@+id/sixPk10_remainder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="rem"
        app:layout_constraintStart_toEndOf="@+id/sixPk10_bulk"
        app:layout_constraintTop_toTopOf="@+id/sixPk10_view" />


    <View
        android:id="@+id/sunstream_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/everyday_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sunstream_name"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:autoSizeTextType="none"
        android:text="Sunstream"
        app:layout_constraintBottom_toBottomOf="@+id/sunstream_view"
        app:layout_constraintEnd_toEndOf="@+id/sunstream_view"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/sunstream_view"
        app:layout_constraintTop_toTopOf="@+id/sunstream_view"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/sunstream_quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sunstream_name"
        app:layout_constraintTop_toTopOf="@+id/sunstream_view" />

    <TextView
        android:id="@+id/sunstream_bulk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="bulk"
        app:layout_constraintStart_toEndOf="@+id/sunstream_quantity"
        app:layout_constraintTop_toTopOf="@+id/sunstream_view" />

    <TextView
        android:id="@+id/sunstream_remainder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="rem"
        app:layout_constraintStart_toEndOf="@+id/sunstream_bulk"
        app:layout_constraintTop_toTopOf="@+id/sunstream_view" />


    <View
        android:id="@+id/everyday_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_tescoCalculatorCalculate"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/everyday_name"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:autoSizeTextType="none"
        android:text="EveryDay Val"
        app:layout_constraintBottom_toBottomOf="@+id/everyday_view"
        app:layout_constraintEnd_toEndOf="@+id/everyday_view"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/everyday_view"
        app:layout_constraintTop_toTopOf="@+id/everyday_view"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/everyday_quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/everyday_name"
        app:layout_constraintTop_toTopOf="@+id/everyday_view" />

    <TextView
        android:id="@+id/everyday_bulk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="bulk"
        app:layout_constraintStart_toEndOf="@+id/everyday_quantity"
        app:layout_constraintTop_toTopOf="@+id/everyday_view" />

    <TextView
        android:id="@+id/everyday_remainder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="none"
        android:text="rem"
        app:layout_constraintStart_toEndOf="@+id/everyday_bulk"
        app:layout_constraintTop_toTopOf="@+id/everyday_view" />


</androidx.constraintlayout.widget.ConstraintLayout>